generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          String       @id() @default(uuid())
  name        String       @unique
  content     String
  persons     Int
  timePrep    Int
  timeCook    Int
  ingredients Ingredient[]
}

model Ingredient {
  id       String @id() @default(uuid())
  name     String
  amount   Float
  unit     String
  recipeId String
  recipe   Recipe @relation(fields: [recipeId], references: [id])
}

model FilterableIngredient {
  name String @id()
}
